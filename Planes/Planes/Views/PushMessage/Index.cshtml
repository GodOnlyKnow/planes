@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "推送中心";
    ViewBag.SiderBar = 9;
}

<hr />
<div class="row">
    <div class="col-md-2">
        @Html.ActionLink("新 增", "Create", null , new { @class = "btn btn-block btn-success" })
    </div>
</div>
<hr />
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>序号</th>
                <th>标题</th>
                <th>内容</th>
                <th>时间</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @foreach (var m in ViewBag.Data)
            {
                <tr>
                    <td>
                        @{
                i++;
                @i
                        }
                    </td>
                    <td>@m.title</td>
                    <td>@m.body</td>
                    <td>@m.created_at</td>
                    <td>
                        <a class="button button-small button-caution" href="/PushMessage/Delete/@m.id">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    @Html.PagedListPager((IPagedList)ViewBag.Data, page => Url.Action("Index", new { page }))
</div>




