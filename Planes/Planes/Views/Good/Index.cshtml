                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>序号</th>
                            <th>图片</th>
                            <th>名称</th>
                            <th>价格</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 0;
                        }
                        @foreach (var m in ViewBag.Data1)
                        {
                            <tr>
                                <td>
                                    @{
                            i++;
                            @i
                                    }
                                </td>
                                <td><img src="/@m.img" style="max-height:60px;" class="img-responsive" /></td>
                                <td>@m.name</td>
                                <td>@m.price</td>
                                <td>
                                    <a class="button button-small button-highlight" href="/Good/Detail/@m.good_id">查看</a>
                                    <a class="button button-small button-caution" href="/Good/Delete/@m.good_id">删除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
