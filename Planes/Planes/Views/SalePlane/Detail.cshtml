@model Planes.Models.EditOfPlaneModel
@{
    ViewBag.Title = "查看飞机详情";
    ViewBag.SiderBar = 6;
}

<hr />
@using (Html.BeginForm("Detail", "SalePlane", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="col-sm-offset-2 col-sm-10">
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
    @Html.HiddenFor(m => m.Id);
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Modelss, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.Modelss, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Col1, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.Partial("_PlaneType", ViewData["Col1"] = Model.Col1)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Col2, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.Col2, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Col3, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.Col3, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Col6, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.Col6, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MarketPrice, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.MarketPrice, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Col4, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.Col4, new { @class = "form-control" })
        </div>
    </div>
   
    <div class="form-group">
        @Html.LabelFor(m => m.Col7, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.Col7, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Col8, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.Col8, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Desci, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextAreaFor(m => m.Desci, new { @class = "form-control", rows = "6" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">展示图片</label>
        <div class="col-sm-6">
            <input type="file" name="Img" id="Img" data-preview-file-type="image" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">介绍图片</label>
        <div class="col-md-6">
            <input type="file" name="Imgs" id="Imgs" multiple="multiple" data-preview-file-type="image" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <button class="btn btn-primary btn-block" type="submit">保存</button>
        </div>
    </div>
}
@section scripts{
    <script>
        $("#Img").fileinput({
            allowedFileTypes: ['image'],
            allowedFileExtensions: ['jpg', 'png', 'gif', 'bmp', 'jpeg'],
            initialPreview: [
                "<img src='/@Model.ImgUrl' class='file-preview-image' >"
            ],
            overwriteInitial: true,
            showUpload: false
        });

        $("#Imgs").fileinput({
            allowedFileTypes: ['image'],
            allowedFileExtensions: ['jpg', 'png', 'gif', 'bmp', 'jpeg'],
            initialPreview: [
                @foreach (var s in Model.ImgUrls)
            {
            @:"<img src='/@s' class='file-preview-image' >",
            }
            ],
            overwriteInitial: true,
            showUpload: false
        });
    </script>
}