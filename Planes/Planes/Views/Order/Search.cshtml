@{
    ViewBag.Title = "订单管理";
    ViewBag.SiderBar = 3;
}
@using PagedList;
@using PagedList.Mvc;
<hr />
<div class="row">
    @using (Html.BeginForm("Search", "Order", FormMethod.Get, new { @class = "form", role = "form" }))
    {
        <div class="form-group">
            <label class="control-label col-md-1 form-title">用户名：</label>
            <div class="col-md-3">
                <input class="form-control" type="text" id="UserName" name="UserName" value="@ViewData["UserName"]" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-1 form-title">状态：</label>
            <div class="col-md-2">
                <select name="Status" class="form-control" id="Status">
                    <option value="-1" @if (ViewData["Status"] == null || (int)ViewData["Status"] == 0) { @: selected
                                                        }>
                        全部
                    </option>
                    <option value="0" @if (ViewData["Status"] != null && (int)ViewData["Status"] == 1) { @: selected
                                                        }>
                        待支付
                    </option>
                    <option value="1" @if (ViewData["Status"] != null && (int)ViewData["Status"] == 2) { @: selected
                                                        }>
                        已支付
                    </option>
                    <option value="2" @if (ViewData["Status"] != null && (int)ViewData["Status"] == 3) { @: selected
                                                                                    }>
                        订单取消
                    </option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">查找</button>
        </div>
    }
</div>
<hr />
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>序号</th>
                <th>用户名</th>
                <th>手机号</th>
                <th>业务种类</th>
                <th>字母编号</th>
                <th>数字编号</th>
                <th>金额</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in ViewBag.Data)
            {
                <tr>
                    <td>@m.order_id</td>
                    <td>@m.Users.username</td>
                    <td>@m.Users.phone</td>
                    <td>@m.OrderType.name</td>
                    <td>@m.OrderType.sign</td>
                    <td>@m.orderId</td>
                    <td>@m.amount</td>
                    <td class=" text-center">
                        <a class="button button-primary button-small" data-id="@m.order_id" onclick="changeStatus(this)">
                            @if (m.status == 0)
                            {
                                @:待支付
                            }
                            else if(m.status == 1)
                            {
                                @:已支付
                            }
                            else
                            {
                                @:订单取消
                            }
                        </a>
                    </td>
                    <td>
                        <a class="button button-small button-highlight" href="/Order/Details/@m.order_id">查看</a>
                        <a class="button button-small button-caution" href="/Order/Delete/@m.order_id">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)ViewBag.Data, page => Url.Action("Search", new
{
    page = page,
    Status = ViewData["Status"],
    UserName = ViewData["UserName"]
}))
</div>
<div id="Modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">提示</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">确定</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        function changeStatus(r) {
            $.post("/Order/ChangeStatus", { id: $(r).data("id") }, function (res) {
                $(".modal-body").html(res.Info);
                $("#Modal").modal();
                if (res.Code == 200) {
                    if (res.Status == 0)
                        $(r).html("未支付");
                    else
                        $(r).html("已支付");
                }
            });
        }
    </script>
}



