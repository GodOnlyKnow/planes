@{
    ViewBag.Title = "反馈意见";
    ViewBag.SiderBar = 8;
}
@using PagedList;
@using PagedList.Mvc;

<hr />
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>用户姓名</th>
                <th>用户手机号</th>
                <th>反馈</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @foreach (var m in ViewBag.Data)
            {
                <tr>
                    <td>@m.Users.true_name</td>
                    <td>@m.Users.phone</td>
                    <td>@m.body</td>
                    <td>
                        <a class="button button-small button-caution" href="/Feedback/Delete/@m.id">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)ViewBag.Data, page => Url.Action("Index", new
{
    page = page
}))
</div>

